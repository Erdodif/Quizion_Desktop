<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800" Background="#7985C1">
    <Grid RenderTransformOrigin="0.485,0.501" Margin="0,0,-21.4,-30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="779*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_nev"  Style="{StaticResource MontserratFont}"  Content="Név: " HorizontalAlignment="Left" Margin="94,10,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold"/>
        <Button x:Name="btn_login" Style="{StaticResource MontserratFont}" Content="Bejelentkezés" HorizontalAlignment="Left" Margin="260,367,0,41" VerticalAlignment="Center" Width="285" FontSize="24" Click="btn_login_Click" FontStyle="Italic"/>
        <Label x:Name="lbl_jelszo" Style="{StaticResource MontserratFont}" Content="Jelszó: " HorizontalAlignment="Left" Margin="94,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.412,-0.124" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="tbx_00" Height="23" Margin="353,10,0,0" Style="{StaticResource MontserratFont}" TextWrapping="Wrap" Width="192" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBox x:Name="tbx_01" HorizontalAlignment="Left" Height="23" Margin="353,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192"/>


        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="187,101,0,0" VerticalAlignment="Top" Width="607">

            <TextBlock x:Name="lbl_keres" Style="{StaticResource MontserratFont}" Text="Ellenőrzés" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="227,307,0,0" VerticalAlignment="Top" Width="355"/>
        </ScrollViewer>
        <ScrollViewer HorizontalAlignment="Left" Height="100" Margin="187,222,0,0" VerticalAlignment="Top" Width="604">
            <TextBlock x:Name="lbl_listaz" Style="{StaticResource MontserratFont}" Text="Kilistázás" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="227,307,0,0" VerticalAlignment="Top" Width="355"/>
        </ScrollViewer>


        <TextBlock x:Name="tbl_hibak"  Style="{StaticResource MontserratFont}" HorizontalAlignment="Left" Margin="372,327,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="419" Height="35"/>
        <Label x:Name="lbl_ell" Content="Ellenőrzés" Style="{StaticResource MontserratFont}"  HorizontalAlignment="Left" Margin="28,155,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5" Width="125" FontSize="16" FontWeight="Bold"/>
        <Label x:Name="lbl_lista" Content="Lista" HorizontalAlignment="Left" Margin="28,260,0,0" VerticalAlignment="Top" Width="82" FontSize="18" FontWeight="Bold"/>

    </Grid>

    
</Window>
