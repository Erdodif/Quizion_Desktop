<Window x:Class="Projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt"
        mc:Ignorable="d"
        Title="Login" Height="674.719" Width="1000" Background="#7985C1">
    <Grid RenderTransformOrigin="0.485,0.501" Margin="0,0,-21.4,-30">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="493*"/>
            <ColumnDefinition Width="308*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Image Source="fejlec.png" Grid.ColumnSpan="3" Margin="0,-107,13,546" Width="1000" Height="235"/>
        <Image Source="quizion_logo.png" Margin="24.43,38.689,0,244.527" UseLayoutRounding="False" HorizontalAlignment="Left" Width="319.375" />
        <Label x:Name="lbl_nev"  Style="{StaticResource MontserratFont}"  Content="Név: " HorizontalAlignment="Left" Margin="400,147,0,0" VerticalAlignment="Top" FontSize="22" FontWeight="Bold" RenderTransformOrigin="0.622,0.046"/>
        <Button x:Name="btn_login" Style="{StaticResource MontserratFont}" Content="Bejelentkezés" HorizontalAlignment="Left" Margin="539,594,0,48" VerticalAlignment="Center" Width="285" FontSize="24" Click="btn_login_Click" FontStyle="Italic" Grid.ColumnSpan="2"/>
        <Label x:Name="lbl_jelszo" Style="{StaticResource MontserratFont}" Content="Jelszó: " HorizontalAlignment="Left" Margin="400,220,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.412,-0.124" FontSize="22" FontWeight="Bold"/>
        <TextBox x:Name="tbx_name" Height="23" Margin="54,150,0,0" Style="{StaticResource MontserratFont}" TextWrapping="Wrap" Width="220" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBox x:Name="tbx_pass"   Style="{StaticResource MontserratFont}" HorizontalAlignment="Left" Height="23" Margin="54,223,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Grid.Column="1"/>





        <TextBlock x:Name="tbl_hibak"  Style="{StaticResource MontserratFont}" HorizontalAlignment="Left" Margin="450,289,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="468" Height="262" Grid.ColumnSpan="2"/>
        <Button x:Name="btn_login_Copy" Style="{StaticResource MontserratFont}" Content="Regisztráció" HorizontalAlignment="Left" Margin="24,594,0,48" VerticalAlignment="Center" Width="285" FontSize="24" Click="RegisClick" FontStyle="Italic"/>


    </Grid>


</Window>
